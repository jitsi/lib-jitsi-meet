{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "DOM",
      "ES2021",
      "ES2024.Promise"
    ],
    "outDir": "dist/esm/",
    "stripInternal": true,
  },
  "exclude": [
    "dist",
    "doc",
    "docs",
    "types",
    "**/*.spec.js",
    "**/*.spec.ts",
    "*.conf*.js",
    "index.js",
    "lib-jitsi-meet.*.js",
    "webpack*.js",
  ],
  "typedocOptions": {
    "entryPoints": [
      "JitsiConference.js",
      "JitsiConferenceErrors.ts",
      "JitsiConferenceEvents.ts",
      "JitsiConnection.ts",
      "JitsiConnectionErrors.ts",
      "JitsiConnectionEvents.ts",
      "JitsiMediaDevices.js",
      "JitsiMediaDevicesEvents.ts",
      "JitsiMeetJS.ts",
      "JitsiParticipant.ts",
      "JitsiParticipantEvents.js",
      "JitsiTrackError.ts",
      "JitsiTrackErrors.ts",
      "JitsiTrackEvents.ts",
    ],
    "excludePrivate": true,
    "excludeProtected": true,
    "readme": "none",
  }
}
